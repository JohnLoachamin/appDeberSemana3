<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appDeberSeman2.login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://jorzgz0iptpc.cdn.shift8web.com/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" Margin="0,90,0,20"></Image>

            <Entry Placeholder="Usuario" x:Name="txtUsuario" Margin="30,20,30,5"></Entry>
            <Entry Placeholder="Contraseña" x:Name="txtContrasenia" Margin="30,20,30,5" IsPassword="True"></Entry>
            <Button Text="Ingresar" BackgroundColor="#2196F3" CornerRadius="12" TextColor="white" Margin="30,20,30,5" Clicked="Button_Clicked"></Button>
            <Label Text="Powered by John A. Loachamin Collaguazo." FontSize="14" Margin="40,0,0,0" HorizontalTextAlignment="Center"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>